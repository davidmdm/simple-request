{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "ESNext",
    "noImplicitAny": true,
    "lib": ["ESNext"],

    "outDir": "dist",
    "noUnusedLocals": true,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
